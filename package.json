{
  "name": "@flowwishthebest/tfp",
  "version": "0.0.1",
  "description": "Theoretical foundations of programming",
  "main": "dist/main.js",
  "directories": {
    "doc": "docs"
  },
  "bin": {
    "ilya": "./bin/main.js"
  },
  "scripts": {
    "test": "jest -c ./jest.config.json",
    "coverage": "cat ./coverage/lcov.info | coveralls",
    "build": "tsc",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src",
    "lint:fix": "tslint --fix -p ./tsconfig.json -c ./tslint.json",
    "prettify": "prettier --config ./prettierrc.json --write '{src,__tests__}/**/*.ts'",
    "start": "node dist/main.js",
    "debug": "node --inspect-brk=0.0.0.0 dist/main.js",
    "prepublish": "npm run build"
  },
  "files": [
    "bin/",
    "dist/"
  ],
  "keywords": [
    "computer science",
    "cs",
    "interpreter",
    "translator"
  ],
  "author": "Ilya P. <togowiththeflow@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.1",
    "@types/yargs": "^15.0.4",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "coveralls": "^3.0.9",
    "eslint": "6.8.0",
    "eslint-plugin-jest": "^23.8.2",
    "handlebars": "^4.7.7",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "yargs": "^15.3.0"
  }
